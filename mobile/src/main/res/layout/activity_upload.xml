<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/blu"
    android:weightSum="1"
    android:orientation="vertical"
    tools:context="app.com.example.android.hagglemaster.UploadActivity"
    android:visibility="visible">

    <TextView android:text="@string/upload_title"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/off_white"
        android:paddingBottom="20dp"
        />


    <EditText
        android:textColor="@color/blu"
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagebtn"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@android:color/white"
        android:hint="@string/title"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:textColor="@color/blu"
        android:id="@+id/address_text"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text"
        android:background="@android:color/white"
        android:hint="@string/address"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/description_text"
        android:textColor="@color/blu"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_text"
        android:background="@android:color/white"
        android:hint="@string/description"
        android:lines="2"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:minHeight="30dp" />

    <Button
        android:id="@+id/uploadbtn"
        android:textColor="@color/blu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_text"
        android:text="@string/upload_submit"
        android:background="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:onClick="DBUpload"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:maxHeight="50dp"
        android:maxWidth="800dp"
        android:minHeight="50dp" />

    <Button
        android:id="@+id/imagebtn"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/blu"
        android:background="@android:color/white"
        android:text="@string/imgbtn"
        android:layout_marginBottom="10dp"
        android:onClick="cameraOpen"
        android:layout_marginTop="-10dp"
        android:maxHeight="150dp"
        android:minHeight="150dp" />



</RelativeLayout>
